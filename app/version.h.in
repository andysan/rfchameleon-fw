#ifndef RFCHAMELEON_VERSION_H_
#define RFCHAMELEON_VERSION_H_

#define RFCHAMELEON_VERSION_MAJOR ${PROJECT_VERSION_MAJOR}
#define RFCHAMELEON_VERSION_MINOR ${PROJECT_VERSION_MINOR}
#define RFCHAMELEON_VERSION_PATCH ${PROJECT_VERSION_PATCH}

/** Application version. */
#define RFCHAMELEON_VERSION				\
	((RFCHAMELEON_VERSION_MAJOR << 16) +	\
	 (RFCHAMELEON_VERSION_MINOR << 8) +		\
	 RFCHAMELEON_VERSION_PATCH)

#define RFCHAMELEON_VERSION_STR "${PROJECT_VERSION}"

#endif /* RFCHAMELEON_VERSION_H_ */
